<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="#c6d7ff">


    <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/wildcardErrorBox"
            android:background="#759eff"
            android:textColor="#ffffff"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/wildcardNameList" android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:id="@+id/wildcardNameList"
            android:scrollbars="vertical"
            android:textAlignment="viewStart"
            android:background="#ffffff"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="190dp"
            app:layout_constraintTop_toBottomOf="@+id/wildcardTitle"/>
    <EditText
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/wildcardSex"
            app:layout_constraintStart_toEndOf="@+id/wildcardSwitchSex"
            app:layout_constraintTop_toBottomOf="@+id/wildcardTimeMin" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginTop="16dp" android:hint="boy/girl"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:inputType="date"
            android:ems="10"
            android:gravity="center"
            android:id="@+id/wildcardTimeMax"
            android:hint="2008"
            app:layout_constraintStart_toEndOf="@+id/wildcardTimeMin"
            app:layout_constraintTop_toBottomOf="@+id/wildcardName" android:layout_marginTop="16dp"
    />
    <EditText
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:inputType="date"
            android:ems="10"
            android:gravity="center"
            android:id="@+id/wildcardTimeMin"
            android:hint="1880"
            app:layout_constraintStart_toEndOf="@+id/wildcardSwitchPeriod"
            app:layout_constraintTop_toBottomOf="@+id/wildcardName" android:layout_marginTop="16dp"/>
    <EditText
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/wildcardName"
            app:layout_constraintStart_toEndOf="@+id/wildcardSwitchName"
            app:layout_constraintTop_toBottomOf="@+id/wildcardTitle" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginTop="16dp" android:hint="Enter Name"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Switch
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/wildcardSwitchSex"
            app:layout_constraintTop_toBottomOf="@+id/wildcardSwitchPeriod"
            app:layout_constraintStart_toEndOf="@+id/wildcardRandomSex"
            android:layout_marginTop="16dp"/>
    <Switch
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/wildcardSwitchPeriod"
            app:layout_constraintTop_toBottomOf="@+id/wildcardSwitchName"
            app:layout_constraintStart_toEndOf="@+id/wildcardRandomPeriod"
            android:layout_marginTop="16dp"/>
    <TextView
            android:text="Randomize Sex?"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:id="@+id/wildcardRandomSex"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintTop_toBottomOf="@+id/wildcardRandomPeriod"
            android:layout_marginTop="16dp"/>
    <TextView
            android:text="Randomize Time?"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:id="@+id/wildcardRandomPeriod"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintTop_toBottomOf="@+id/wildcardRandomName"
            android:layout_marginTop="16dp"/>
    <TextView
            android:text="Randomize Name?"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:id="@+id/wildcardRandomName"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintTop_toBottomOf="@+id/wildcardTitle"
            android:layout_marginTop="16dp"/>
    <TextView
            android:text="Wildcard Search"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:id="@+id/wildcardTitle" android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:background="#759eff"
            android:textColor="#ffffff"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent" android:textSize="30sp"/>
    <Switch
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/wildcardSwitchName"
            app:layout_constraintTop_toBottomOf="@+id/wildcardTitle"
            app:layout_constraintStart_toEndOf="@+id/wildcardRandomName"
            android:layout_marginTop="16dp"/>
</android.support.constraint.ConstraintLayout>