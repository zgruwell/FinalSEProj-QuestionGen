<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#c6d7ff"
        tools:context="com.example.sasha.finalsoftware.ui.MainActivity">


    <Button
            android:text="Wildcard Search"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:id="@+id/wildcardButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:background="#759eff"
            android:textColor="#ffffff"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.497" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/compButton"/>
    <Button
            android:text="View Names"
            android:layout_width="wrap_content"
            android:layout_height="48dp" android:id="@+id/button"
            android:onClick="switchToNamesListed"
            android:background="#759eff"
            android:textColor="#ffffff"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="Git_sum Names!"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:id="@+id/title_textView" android:textSize="24sp"
            android:gravity="center"
            android:background="#759eff"
            android:textColor="#ffffff"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <Button
            android:text="SEARCH NAMES"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:id="@+id/searchButton"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:background="#759eff"
            android:textColor="#ffffff"
            app:layout_constraintTop_toBottomOf="@+id/title_textView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>

    <Button
            android:id="@+id/questionButton"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_marginTop="32dp"
            android:background="#759eff"
            android:gravity="center"
            android:text="Questions"
            android:textColor="#ffffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/wildcardButton" />

    <Button
            android:text="COMPARE NAMES"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:id="@+id/compButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:background="#759eff"
            android:textColor="#ffffff"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.497" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/searchButton"/>
    <Button
            android:text="Sign Out"
            android:textColor="#ff0000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/SignOut" android:layout_marginEnd="17dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="33dp"
            />

    <Button
            android:id="@+id/competitive"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_marginStart="16dp"
            android:background="#759eff"
            android:gravity="center"
            android:text="Competitive Game"
            android:textColor="#ffffff"
            app:layout_constraintBottom_toTopOf="@+id/button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.461"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/questionButton"
            app:layout_constraintVertical_bias="0.15" />

</android.support.constraint.ConstraintLayout>